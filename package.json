{
  "name": "@postlight/mercury-parser",
  "version": "2.2.0",
  "description": "Mercury transforms web pages into clean text. Publishers and programmers use it to make the web make sense, and readers use it to read any web article comfortably.",
  "author": "Postlight <mercury@postlight.com>",
  "homepage": "https://mercury.postlight.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/treppo/mercury-parser.git"
  },
  "bugs": {
    "url": "https://github.com/treppo/mercury-parser/issues"
  },
  "keywords": [
    "mercury",
    "parser",
    "reader",
    "content"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/mercury.js",
  "scripts": {
    "lint": "eslint . --fix",
    "lint:ci": "remark . && eslint .",
    "lint-fix-quiet": "eslint --fix --quiet",
    "build": "yarn lint && rollup -c && yarn test:build",
    "build:ci": "rollup -c && yarn test:build",
    "release": "yarn build",
    "build:generator": "rollup -c scripts/rollup.config.js",
    "test": "yarn lint && jest --json --outputFile test-output.json && yarn build",
    "test:build": "cd ./scripts && jest check-build.test.js",
    "watch:test": "jest --watch",
    "generate-parser": "node ./dist/generate-custom-parser.js"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@jesses/circle-github-bot": "^2.1.0",
    "@octokit/rest": "^17.1.4",
    "@rollup/plugin-typescript": "^4.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-babel": "^5.3.0",
    "husky": "^4.2.3",
    "inquirer": "^7.0.0",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.1",
    "nock": "^12.0.3",
    "ora": "^4.0.0",
    "prettier": "^2.0.2",
    "remark-cli": "^8.0.0",
    "remark-lint": "^7.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "rollup": "^2.3.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@postlight/ci-failed-test-reporter": "^1.0",
    "cheerio": "^0.22.0",
    "difflib": "github:postlight/difflib.js",
    "ellipsize": "0.1.0",
    "iconv-lite": "0.5.1",
    "moment": "^2.24.0",
    "moment-parseformat": "3.0.0",
    "moment-timezone": "0.5.28",
    "postman-request": "^2.88.1-postman.22",
    "string-direction": "^0.1.2",
    "turndown": "^6.0.0",
    "valid-url": "^1.0.9",
    "wuzzy": "^0.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "remark .",
      "prettier --write",
      "git add"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "rollup-plugin-node-resolve",
      "eslint-import-resolver-babel-module",
      "jest",
      "jest-cli",
      "babel-jest"
    ]
  }
}
